<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="/css/styles.css")
        title Guess Mine
    body
        form.loginBox.jsLogin
            h4.loginBox__title Log in
            input(type="text", placeholder="Username")
        .gameContainer
            .main
                #gameNotifications
                canvas.canvas#canvas
                .controls#controls
                    .colors
                        .color(style="background-color:rgb(0, 0, 0)")
                        .color(style="background-color:rgb(255,255,255)")
                        .color(style="background-color:rgb(255,59,48)")
                        .color(style="background-color:rgb(255,149,0)")
                        .color(style="background-color:rgb(255,204,0)")
                        .color(style="background-color:rgb(76,217,100)")
                        .color(style="background-color:rgb(90,200,250)")
                        .color(style="background-color:rgb(0,122,255)")
                        .color(style="background-color:rgb(88,86,214)")
                    button#paintMode Fill
            .chat
                .players
                    h3 Players
                    ul#players
                ul.chatMessages
                form.sendMessage
                    input.sendMessage__input(placeholder="Write a message")
        script.
            let socketEvents = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")